<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:backgroundTint="#F7F7F7" android:background="#F7F7F7">


    <TextView
            android:id="@+id/textView10"
            android:layout_width="105dp"
            android:layout_height="24dp"
            android:text="Location:"
            android:textColor="#787676"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.205"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.71"/>
    <EditText
            android:id="@+id/locationEditText"
            android:layout_width="191dp"
            android:layout_height="47dp"
            android:text="Targu Mures"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.924"
            app:layout_constraintVertical_bias="0.712"/>
    <TextView
            android:id="@+id/roleEditText"
            android:layout_width="274dp"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:text="Role"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_picture_layout"
            app:layout_constraintVertical_bias="0.136" app:layout_constraintHorizontal_bias="0.428"/>
    <ImageView
            android:id="@+id/profile_picture_layout"
            android:layout_width="140dp"
            android:layout_height="136dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.099"
            app:srcCompat="@drawable/upload_image"/>

    <EditText
            android:id="@+id/lastNameEditText"
            android:layout_width="185dp"
            android:layout_height="49dp"
            android:text="lastName"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.309"/>
    <EditText
            android:id="@+id/firstNameEditText"
            android:layout_width="185dp"
            android:layout_height="49dp"
            android:text="firstName"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.132" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.309"/>
    <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#636363"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.167"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/emailEditText"
            android:layout_width="251dp"
            android:layout_height="23dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:id="@+id/textView9"
            android:layout_width="105dp"
            android:layout_height="24dp"
            android:text="Phone number"
            android:textColor="#787676"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.205"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.637"/>
    <EditText
            android:id="@+id/phoneNumberEditText"
            android:layout_width="199dp"
            android:layout_height="42dp"
            android:text="07********"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.924"
            app:layout_constraintVertical_bias="0.645"/>
    <Button
            android:text="UPDATE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/updateButton"
            android:drawableLeft="@drawable/baseline_file_upload_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.809" android:scrollbarSize="5sp" android:backgroundTint="#A6B6DA"
            android:textColor="#FEFEFE"/>


</androidx.constraintlayout.widget.ConstraintLayout>