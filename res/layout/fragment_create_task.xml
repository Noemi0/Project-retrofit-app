<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context="com.zoltanlorinczi.project_retrofit.fragment.NewTaskFragment"
                                                   android:textAlignment="center">



    <EditText
            android:layout_width="301dp"
            android:layout_height="39dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/taskTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#FFFFFF" android:padding="5sp"
            android:hint="Enter task title here..."
            android:layout_marginEnd="54dp" android:layout_marginStart="54dp"
            android:textAlignment="center" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.057"/>
    <TextView
            android:text="Priority:"
            android:layout_width="133dp"
            android:layout_height="21dp" android:id="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.263"/>
    <TextView
            android:text="DeadLine:"
            android:layout_width="133dp"
            android:layout_height="21dp" android:id="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.326"/>
    <Spinner
            android:layout_width="65dp"
            android:layout_height="52dp" android:id="@+id/prioritySpinner2"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="SpeakableTextPresentCheck" android:background="#FFFFFF" android:padding="5sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="54dp"
            android:layout_marginStart="54dp" app:layout_constraintHorizontal_bias="0.634"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.265" android:textAlignment="center"/>
    <DatePicker


            android:id="@+id/datePicker1"
            android:layout_width="336dp"
            android:layout_height="325dp"
            android:textSize="25dp"

            android:padding="20dp"
            android:datePickerMode="calendar"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5" android:scaleX="0.7" android:scaleY="0.7"
            app:layout_constraintStart_toEndOf="@+id/textView4"/>
    <Spinner
            android:layout_width="315dp"
            android:layout_height="47dp" android:id="@+id/assigneeSpinner"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="SpeakableTextPresentCheck"
            android:background="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="54dp"
            android:layout_marginEnd="54dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.182" android:textAlignment="center" android:padding="5sp"
    />
    <TextView
            android:text="Assignee:"
            android:layout_width="133dp"
            android:layout_height="21dp" android:id="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.132"/>
    <EditText
            android:layout_width="296dp"
            android:layout_height="112dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" android:hint="Description..."
            android:background="#FFFFFF" android:padding="5sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.786"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.495"/>
    <Button
            android:text="Create"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content" android:id="@+id/createBtn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498" android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.904"
            android:backgroundTint="#A6B6DA"/>
</androidx.constraintlayout.widget.ConstraintLayout>