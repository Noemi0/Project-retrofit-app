<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:src="@drawable/team"
            android:layout_width="113dp"
            android:layout_height="161dp" android:id="@+id/imageView10"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="-40dp" app:layout_constraintHorizontal_bias="0.885"/>
    <TextView
            android:text="My Groups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/groupTitle"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.056" android:textSize="30sp" android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.039"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclergroupMemberView"
            android:layout_width="358dp"
            android:layout_height="617dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:itemCount="10"
            tools:listitem="@layout/fragment_group_members_item"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.853" app:layout_constraintStart_toEndOf="@+id/noUserFoundText"/>
    <TextView
            android:text="No group members found!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/noUserFoundText"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="25sp"/>
    <ImageView
            android:src="@drawable/user_research"
            android:layout_width="188dp"
            android:layout_height="226dp" android:id="@+id/noMemberImg"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.263"/>

</androidx.constraintlayout.widget.ConstraintLayout>