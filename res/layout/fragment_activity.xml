<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">


    <TextView
            android:text="Activities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/task_title4"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.104" android:textSize="30sp" android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.039"/>
    <ImageView
            android:src="@drawable/tasks"
            android:layout_width="87dp"
            android:layout_height="142dp" android:id="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="-15dp" app:layout_constraintHorizontal_bias="0.793"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="350dp"
            android:layout_height="547dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:itemCount="10"
            tools:listitem="@layout/simple_task_list_item"
            app:layout_constraintHorizontal_bias="0.482"
            app:layout_constraintVertical_bias="0.414"/>

</androidx.constraintlayout.widget.ConstraintLayout>